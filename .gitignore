from scapy.all import sniff, IP, TCP, UDP, ICMP

def process_packet(packet):
    if IP in packet:
        ip_layer = packet[IP]
        proto = "OTHER"
        if TCP in packet:
            proto = "TCP"
        elif UDP in packet:
            proto = "UDP"
        elif ICMP in packet:
            proto = "ICMP"
        print(f"[{proto}] {ip_layer.src} âžœ {ip_layer.dst}")

print("ðŸ”Ž Starting network sniffer (Ctrl+C to stop)...\n")
sniff(prn=process_packet, store=False)
